{
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "target": "ES6",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true /* Skip type checking all .d.ts files. */,
      "composite": true /* Enable project compilation */,
      "jsx": "react-jsx"
    },
    "include": ["./*.ts", "src/**/*.ts","../utils/**/*.ts","../utils/**/*.tsx", "tests/**/*.ts"],
}